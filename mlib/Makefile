OBJS := $(SRCS:.c=.o)
DEPS := $(OBJS:.o=.d)

#-----------------

.PHONY: all clean

all: $(TARGET)

$(TARGET): $(OBJS)
	$(AR) r $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c -MMD -MP -MF $(@:.o=.d) -o $@ $<

clean:
	rm -f $(TARGET) $(OBJS) $(DEPS)

-include $(DEPS)
